        </icon>
        <icon>
            <id>low</id>
            <name>Low Severity</name>
            <description>Monitor but not urgent</description>
            <icon_file>ic_severity_low</icon_file>
            <recommended_response>Continue monitoring and reassess in 1-2 weeks</recommended_response>
        </icon>
    </severity_icons>

