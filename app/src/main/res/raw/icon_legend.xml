    <disease_icons>
        <icon>
            <id>bacterial</id>
            <name>Bacterial</name>
            <description>Diseases caused by bacteria</description>
            <examples>
                <example>Bacterial Blight</example>
                <example>Bacterial Wilt</example>
                <example>Bacterial Spot</example>
            </examples>
            <icon_file>ic_bacterial</icon_file>
            <identification_characteristics>Often appears as water-soaked lesions, streaks, or oozing</identification_characteristics>
            <transmission>Commonly spread through water, soil, wounds, or insects</transmission>
        </icon>
        <icon>
            <id>fungal</id>
            <name>Fungal</name>
            <description>Diseases caused by fungi</description>
            <examples>
                <example>Powdery Mildew</example>
                <example>Leaf Spot</example>
                <example>Rust</example>
                <example>Blight</example>
            </examples>
            <icon_file>ic_fungal</icon_file>
            <identification_characteristics>Often shows as spots, powdery growth, or visible mycelium</identification_characteristics>
            <transmission>Spreads through airborne spores, soil, or water splash</transmission>
        </icon>
        <icon>
            <id>viral</id>
            <name>Viral</name>
            <description>Diseases caused by viruses</description>
            <examples>
                <example>Mosaic Virus</example>
                <example>Leaf Curl Virus</example>
                <example>Yellow Vein Mosaic</example>
            </examples>
            <icon_file>ic_viral</icon_file>
            <identification_characteristics>Often causes mottling, curling, stunted growth, or color change</identification_characteristics>
            <transmission>Primarily spread by insect vectors like aphids, whiteflies, or thrips</transmission>
        </icon>
        <icon>
            <id>deficiency</id>
            <name>Deficiency</name>
            <description>Problems caused by nutrient deficiencies</description>
            <examples>
                <example>Nitrogen Deficiency</example>
                <example>Phosphorus Deficiency</example>
                <example>Iron Chlorosis</example>
            </examples>
            <icon_file>ic_deficiency</icon_file>
            <identification_characteristics>Often presents as yellowing, stunting, or deformed growth patterns</identification_characteristics>
            <remediation>Usually addressed through appropriate fertilization and soil amendments</remediation>
        </icon>
    </disease_icons>

