<?xml version="1.0" encoding="utf-8"?>
<!---file path: app/src/main/res/values/themes.xml-->

<resources>
    <!--
      Copyright (c) 2025 askChinna
      File: app/src/main/res/values/themes.xml
      Created: April 30, 2025
      Version: 1.0.2

      Minimal View‑layer theme. All color theming happens in Compose.
    -->
    <style name="Theme.AskChinna" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Edge‑to‑edge transparent bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Window background (in case any legacy View sneaks through) -->
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!-- Splash screen using the AndroidX SplashScreen API -->
    <style name="Theme.AskChinna.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.AskChinna</item>
    </style>
</resources>
