<resources>
    <style name="Theme.AskChinna" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status bar and navigation bar colors set to transparent for edge-to-edge design -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Essential attributes for XML layouts (if any) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>
        <!-- Splash screen theme using the modern Splash Screen API -->
    <style name="Theme.AskChinna.SplashScreen" parent="Theme.SplashScreen">
            <item name="windowSplashScreenBackground">@color/colorPrimary</item>
            <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
            <item name="windowSplashScreenAnimationDuration">300</item>
            <item name="postSplashScreenTheme">@style/Theme.AskChinna</item>
    </style>
</resources>