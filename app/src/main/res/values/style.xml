<resources>

    <!-- Base application styles -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Edge-to-edge support -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Text appearance styles -->
    <style name="TextAppearance.AskChinna.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
    </style>

    <style name="TextAppearance.AskChinna.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="TextAppearance.AskChinna.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_subheading</item>
    </style>

    <style name="TextAppearance.AskChinna.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_body1</item>
    </style>

    <style name="TextAppearance.AskChinna.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_body2</item>
    </style>

    <style name="TextAppearance.AskChinna.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <!-- Button styles -->
    <style name="Widget.AskChinna.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="Widget.AskChinna.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="Widget.AskChinna.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <!-- Input field styles -->
    <style name="Widget.AskChinna.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_field_corner_radius</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:minHeight">@dimen/input_field_height</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.AskChinna.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/card_padding</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>

    <!-- Tab styles -->
    <style name="Widget.AskChinna.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_size</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/textColorSecondary</item>
    </style>

    <!-- Progress indicators -->
    <style name="Widget.AskChinna.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:minWidth">@dimen/progress_indicator_size</item>
        <item name="android:minHeight">@dimen/progress_indicator_size</item>
    </style>

    <!-- Network status styles -->
    <style name="Widget.AskChinna.NetworkStatusView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/network_status_elevation</item>
        <item name="cardBackgroundColor">@color/network_status_background</item>
        <item name="contentPadding">@dimen/spacing_small</item>
    </style>

    <!-- Dialog styles -->
    <style name="ThemeOverlay.AskChinna.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.AskChinna.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.AskChinna.Button.TextButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.AskChinna.Button.TextButton</item>
    </style>
</resources>