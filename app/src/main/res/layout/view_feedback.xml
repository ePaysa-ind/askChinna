<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.cardview.widget.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_feedback_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/feedback_prompt"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/radio_group_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_helpful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_helpful"
                android:textAppearance="?attr/textAppearanceBody1"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/radio_partially_helpful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_partially_helpful"
                android:textAppearance="?attr/textAppearanceBody1"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/radio_not_helpful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/feedback_not_helpful"
                android:textAppearance="?attr/textAppearanceBody1"
                android:paddingVertical="8dp" />

        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_submit_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/submit_feedback"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

</merge>